generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  tasks       Task[]
}

model Task {
  id          Int    @id @default(autoincrement())
  description String
  Todo        Todo?  @relation(fields: [todoId], references: [id])
  todoId      Int?
}
